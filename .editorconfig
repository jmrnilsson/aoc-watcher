# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.py]
charset = utf-8
indent_style = space
indent_size = 4

[*.js]
charset = utf-8
indent_style = tab
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[{*.ps1, *.psm}]
indent_style = space
indent_size = 2
insert_final_newline = true
end_of_line = crlf

[{.venv/**, ./venv/**}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
